<resources>

    <style name="Widget.Theme.Netplix.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="SwitchTextAppearance" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textColor">@drawable/text_color_selector</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="custom_shape">
        <item name="cornerSizeTopLeft">25%</item>
        <item name="cornerSizeTopRight">20%</item>
        <item name="cornerSizeBottomRight">25%</item>
        <item name="cornerSizeBottomLeft">20%</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyBottomLeft">cut</item>
        <item name="cornerFamilyBottomRight">rounded</item>
    </style>

    <style name="rounded_image">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>
</resources>