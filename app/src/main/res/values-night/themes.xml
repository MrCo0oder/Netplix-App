<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Netplix" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/plix_red</item>
        <item name="colorPrimaryVariant">@color/plix_red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#D3E50914</item>
        <item name="colorSecondaryVariant">#BCE50914</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSecondary</item>
        <item name="android:fontFamily">@font/patrick_hand_sc</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/patrick_hand_sc</item>
    </style>
    <style name="SplashTheme" parent="Theme.Netplix">
        <item name="android:windowBackground">@drawable/ic_launcher_foreground</item>
    </style>
</resources>